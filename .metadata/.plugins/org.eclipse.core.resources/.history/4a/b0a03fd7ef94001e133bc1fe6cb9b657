package com.gestor.service;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.gestor.dao.ImpuestoDao;
import com.gestor.model.Impuesto;

@Service
public class ImpuestoServiceImplement implements ImpuestoService {
	
	@Autowired
	ImpuestoDao dao;

	@Override
	public void pagoImpuesto(int idImpuesto, double pago) {
		List<Impuesto> listadoImpuestos = dao.findAll();
		for(Impuesto impuesto:listadoImpuestos) {
			if(impuesto.getIdImpuesto() == idImpuesto) {
				comprobacionRequisitos(impuesto.getValorImpuesto(), pago);
				double impuesto.getValorImpuesto() = impuesto.getValorImpuesto()-pago;
				dao.save(resultado);
			}
		}
	}

