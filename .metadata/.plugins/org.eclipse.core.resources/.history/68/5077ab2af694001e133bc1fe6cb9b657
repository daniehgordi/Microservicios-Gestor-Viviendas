package com.gestor.controller;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.MediaType;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;

import com.gestor.model.Impuesto;
import com.gestor.service.ImpuestoService;

@RestController
public class ImpuestoController {
	
	@Autowired
	private ImpuestoService service;
	
	//http://localhost:8080/impuestos
	@GetMapping(value="/impuestos/{idImpuesto}", produces=MediaType.APPLICATION_JSON_VALUE)
	void pagarImpuestos(@PathVariable("idImpuesto") int idImpuesto,@RequestParam double pago);
	
	
	void modificarImpuesto(int idImpuesto, Impuesto impuesto);
	
	
	Impuesto buscarImpuesto(int idImpuesto);

}
